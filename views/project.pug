extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h2 #{project_name}

        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each language in technologies
            li #{language}
        
        a.button.expanded(href=`${live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${github_link}` target="_blank") GitHub Repo 
    
    br
    img.image(src=`/static/images/project${id}a.png` alt='project screenshot')
    br
    img.image(src=`/static/images/project${id}b.png` alt='project screenshot')
    br
    img.image(src=`/static/images/project${id}c.png` alt='project screenshot')
    